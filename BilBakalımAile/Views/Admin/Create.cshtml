@model BilBakalimAile.Models.Question

<div class="container mt-5">
    <div class="card shadow mx-auto" style="max-width: 600px; border-radius: 20px;">
        <div class="card-header bg-primary text-white p-3">
            <h3 class="mb-0">➕ Yeni Soru Ekle</h3>
        </div>
        <div class="card-body p-4">
            <form action="/Admin/Create" method="post">

                <div class="mb-3">
                    <label class="form-label fw-bold">Soru Metni</label>
                    <textarea name="Text" class="form-control" rows="3" required placeholder="Örn: En hızlı hayvan hangisidir?"></textarea>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <label class="form-label">A Şıkkı</label>
                        <input type="text" name="OptionA" class="form-control" required>
                    </div>
                    <div class="col-6">
                        <label class="form-label">B Şıkkı</label>
                        <input type="text" name="OptionB" class="form-control" required>
                    </div>
                    <div class="col-6">
                        <label class="form-label">C Şıkkı</label>
                        <input type="text" name="OptionC" class="form-control" required>
                    </div>
                    <div class="col-6">
                        <label class="form-label">D Şıkkı</label>
                        <input type="text" name="OptionD" class="form-control" required>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Doğru Cevap</label>
                    <select name="CorrectAnswer" class="form-select form-select-lg" required>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">💾 Kaydet</button>
                    <a href="/Admin/Index" class="btn btn-outline-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>