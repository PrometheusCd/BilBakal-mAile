@model List<BilBakalimAile.Models.Question>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">🛠️ Yönetim Paneli</h2>
        <div>
            <a href="/Admin/Create" class="btn btn-success btn-lg shadow">➕ Yeni Soru Ekle</a>
            <a href="/Admin/Logout" class="btn btn-danger btn-lg shadow ms-2">Çıkış</a>
        </div>
    </div>

    <div class="card shadow border-0" style="border-radius: 15px; overflow: hidden;">
        <table class="table table-hover mb-0" style="font-size: 1.1rem;">
            <thead class="bg-light">
                <tr>
                    <th class="p-3">Soru</th>
                    <th class="p-3">Doğru Cevap</th>
                    <th class="p-3 text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="p-3">@item.Text</td>
                        <td class="p-3 fw-bold text-success">@item.CorrectAnswer</td>
                        <td class="p-3 text-end">
                            <a href="/Admin/Delete/@item.Id" class="btn btn-outline-danger btn-sm" onclick="return confirm('Bu soruyu silmek istediğine emin misin?');">
                                🗑️ Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>